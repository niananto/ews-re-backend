{
  "openapi": "3.0.3",
  "info": {
    "title": "EWS-RE",
    "description": "Early Warning System for River Erosion",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://ews-re-back.onrender.com/",
      "variables": {},
      "description": "production server"
    },
    {
      "url": "http://localhost:8080/",
      "description": "local server"
    }
  ],
  "tags": [
    {
      "name": "data",
      "description": "everything about extracting data"
    }
  ],
  "paths": {
    "/link": {
      "get": {
        "tags": [
          "link"
        ],
        "summary": "fetch link of the default geo json file with the closest water level",
        "operationId": "fetchLink",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LinkEntry"
                }
              }
            }
          }
        }
      }
    },
    "/link?waterLevel={waterLevel}": {
      "get": {
        "tags": [
          "link"
        ],
        "summary": "fetch link of the geo json file with the closest water level given",
        "operationId": "fetchLinkWaterLevel",
        "parameters": [
          {
            "name": "waterLevel",
            "in": "query",
            "description": "Successful operation",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LinkEntry"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LinkEntry": {
        "type": "object",
        "properties": {
          "water_level": {
            "type": "number",
            "example": 16.0087
          },
          "url": {
            "type": "string",
            "example": "https://firebasestorage.googleapis.com/v0/b/ews-re-9d81a.appspot.com/o/water-level-marked%2F16.00874640032320.json?alt=media&token=222ba32a-58e2-4ece-862f-88a928d72485"
          }
        }
      }
    }
  }
}